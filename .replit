modules = ["php-8.2", "postgresql-16"]
[agent]
expertMode = true
integrations = ["replitmail:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Daily Reminders"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Daily Reminders"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"echo 'Executando lembretes automáticos...'; php scripts/send_reminders.php; echo 'Próxima execução em 24 horas'\""

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
